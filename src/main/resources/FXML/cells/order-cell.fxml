<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import helpers.FontIndicator?>

<HBox fx:id="container" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <fx:define>
      <FontIndicator fx:id="font"/>
   </fx:define>
   <children>
      <VBox fx:id="orderPane" styleClass="order-container" maxHeight="-Infinity" minHeight="-Infinity">
         <children>
            <Label fx:id="orderId" viewOrder="1" disable="true" text="Label" maxWidth="Infinity"/>
            <Button fx:id="button" viewOrder="2" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="${font.fontPx * 1.25}" fitWidth="${font.fontPx * 1.25}" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/cloud-down.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
