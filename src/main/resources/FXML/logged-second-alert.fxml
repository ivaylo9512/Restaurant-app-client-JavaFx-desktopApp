<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" styleClass="alert-box" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.base.ControllerAlert">
    <children>
      <GridPane fx:id="content" styleClass="content" >
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" percentWidth="30.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <GridPane GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints fillHeight="false" maxHeight="-Infinity" percentHeight="20.0" valignment="CENTER" vgrow="NEVER" />
                <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
                <RowConstraints percentHeight="55.0" vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <Label fx:id="alertMessage" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="h" GridPane.rowIndex="1" />
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
                     <children>
                         <Button fx:id="nextButton" onMouseClicked="#nextAlert" styleClass="next-button" text="ok" />
                         <Label fx:id="alertsCount" alignment="CENTER" contentDisplay="CENTER" text="Label" />
                     </children>
                  </StackPane>
                  <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="-Infinity" mnemonicParsing="false" styleClass="close-button" text="x" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
               </children>
            </GridPane>
         </children>
      </GridPane>
    </children>
</AnchorPane>
