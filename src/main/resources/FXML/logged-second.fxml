<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import helpers.FontIndicator?>
<?import javafx.scene.shape.Circle?>
<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.secondstyle.LoggedSecond">
    <fx:define>
        <FontIndicator fx:id="font"/>
    </fx:define>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
    <Slider fx:id="fontSizeSlider" orientation="VERTICAL" AnchorPane.rightAnchor="0"/>
    <StackPane styleClass="padding-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane fx:id="contentRoot">
            <GridPane AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <StackPane styleClass="orders">
                    <ListView fx:id="ordersList" styleClass="order-list" onMouseClicked="#showOrder" maxWidth="Infinity"/>
                </StackPane>
                <StackPane fx:id="orderView" styleClass="order-view" GridPane.columnIndex="1">
                    <GridPane fx:id="orderContainer">
                        <rowConstraints>
                            <RowConstraints percentHeight="50"/>
                            <RowConstraints percentHeight="45"/>
                        </rowConstraints>
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        <GridPane fx:id="orderInfo" styleClass="order-info">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <AnchorPane prefHeight="105.0" prefWidth="119.0" maxWidth="-Infinity" maxHeight="-Infinity">
                                <Label fx:id="createdTime" styleClass="date-label" layoutX="21.0" layoutY="62.0"/>
                                <Label fx:id="createdDate" styleClass="date-label" layoutX="21.0" layoutY="41.0"/>
                                <Label styleClass="info-label" layoutX="37.5" layoutY="7.0" text="Created"/>
                            </AnchorPane>
                            <AnchorPane prefHeight="105.0" prefWidth="119.0" maxWidth="-Infinity" maxHeight="-Infinity" GridPane.columnIndex="1">
                                <Label fx:id="updatedTime" styleClass="date-label" layoutX="21.0" layoutY="62.0"/>
                                <Label fx:id="updatedDate" styleClass="date-label" layoutX="21.0" layoutY="41.0"/>
                                <Label styleClass="info-label" layoutX="35.5" layoutY="7.0" text="Updated"/>
                            </AnchorPane>
                            <AnchorPane prefHeight="105.0" prefWidth="119.0" maxWidth="-Infinity" maxHeight="-Infinity" GridPane.columnIndex="2">
                                <Label fx:id="orderId" styleClass="date-label" layoutX="21.0" layoutY="62.0"/>
                                <Label fx:id="dishesCountLabel" styleClass="date-label" layoutX="21.0"/>
                                <Label styleClass="info-label" layoutX="44.0" layoutY="7.0" text="Order"/>
                            </AnchorPane>
                        </GridPane>
                        <StackPane styleClass="dishes-list" GridPane.rowIndex="1">
                            <ListView fx:id="currentDishList"/>
                        </StackPane>
                    </GridPane>
                    <StackPane styleClass="order-icon">
                        <Circle radius="30.5"/>
                        <ImageView fitHeight="34.0" fitWidth="34.0">
                            <Image url="/images/list.png"/>
                        </ImageView>
                    </StackPane>
                </StackPane>
                <GridPane fx:id="createView" styleClass="create-view" disable="true" opacity="0.0" GridPane.columnIndex="1">
                    <rowConstraints>
                        <RowConstraints percentHeight="30"/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints percentHeight="30"/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <StackPane styleClass="menu-container">
                        <ListView fx:id="newOrderList" styleClass="new-order-list" onMouseClicked="#removeMenuItem"/>
                    </StackPane>
                    <Button fx:id="createButton" styleClass="add-button" onMouseClicked="#createNewOrder" GridPane.rowIndex="1">
                        <graphic>
                            <ImageView disable="true" fitHeight="34.0" fitWidth="34.0">
                                <Image url="/images/add.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <TextField fx:id="menuSearch" viewOrder="1" promptText="Search" GridPane.rowIndex="2"/>
                    <StackPane styleClass="menu-container" viewOrder="2" GridPane.rowIndex="3">
                        <ListView fx:id="menuList" styleClass="menu-list" onMouseClicked="#addMenuItem"/>
                    </StackPane>
                </GridPane>
            </GridPane>
            <AnchorPane fx:id="chatView" styleClass="chat-view" disable="true" opacity="0.0"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="212.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <AnchorPane fx:id="mainChat" styleClass="main-chat" disable="true" opacity="0.0"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <ScrollPane fx:id="mainChatScroll" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="1.0">
                            <VBox fx:id="mainChatBlock" maxHeight="Infinity"
                                  maxWidth="Infinity">
                                <padding>
                                    <Insets bottom="10.0" left="5.0" right="5.0"/>
                                </padding>
                                <HBox alignment="CENTER" styleClass="session-info">
                                    <Pane maxHeight="0.5" HBox.hgrow="ALWAYS"/>
                                    <TextFlow maxWidth="-Infinity" minWidth="-Infinity" textAlignment="CENTER"
                                              HBox.hgrow="ALWAYS">
                                        <HBox.margin>
                                            <Insets left="5.0" right="5.0"/>
                                        </HBox.margin>
                                        <Text fx:id="mainChatInfo" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"/>
                                    </TextFlow>
                                    <Pane maxHeight="0.5" HBox.hgrow="ALWAYS"/>
                                </HBox>
                            </VBox>
                        </ScrollPane>
                        <AnchorPane prefHeight="39.0" styleClass="shadow" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="3.0">
                            <Button focusTraversable="false" minWidth="-Infinity" mnemonicParsing="false"
                                    prefHeight="38.0" prefWidth="52.0" AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="0.0">
                                <graphic>
                                    <ImageView fitHeight="22.0" fitWidth="22.0">
                                        <Image url="/images/enter-arrow.png"/>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <TextArea fx:id="mainChatTextArea" maxHeight="-Infinity" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                      AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="0.0"/>
                        </AnchorPane>
                    </AnchorPane>
                </AnchorPane>
                <AnchorPane minWidth="-Infinity" styleClass="chats" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <AnchorPane fx:id="userChatsClip" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="57.0" AnchorPane.rightAnchor="0">
                        <ListView fx:id="chatUsersList" styleClass="chats-list" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                </AnchorPane>
            </AnchorPane>
            <Pane fx:id="contentBar" styleClass="content-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </StackPane>
</AnchorPane>
